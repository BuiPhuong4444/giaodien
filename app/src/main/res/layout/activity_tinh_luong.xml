<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="30dp">


        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/textView_addr"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <EditText
            android:id="@+id/editTextDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Từ ngày"
            android:inputType="date" />

        <EditText
            android:id="@+id/editTextDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="Đến ngày"/>

        <Button
            android:id="@+id/buttonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xem" />

        <TextView
            android:id="@+id/textViewNN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Số công nửa ngày" />

        <TextView
            android:id="@+id/textViewCN"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Số công cả ngày" />

        <TextView
            android:id="@+id/textViewTT"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:hint="Thành tiền
" />
    <Button
        android:id="@+id/buttonTT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh  Toán" />
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit" />



</LinearLayout>
